= form_for @product do |f|
  - if @product.errors.any?
    #error_explanation
      %h2= "#{pluralize(@product.errors.count, "error")} prohibited this product from being saved:"
      %ul
        - @product.errors.full_messages.each do |message|
          %li= message

  .row.justify-content-center.flex-column.flex-lg-row
    .col-12.col-lg-4.pb-4.pb-lg-0
      .card.card-light.h-100
        .card-body.p-3.text-center
          .row.justify-content-center.flex-column.flex-md-row.p-2
            .col-12.col-md-6
              = f.text_field :description, placeholder: "Description"
            .col-12.col-md-6
              .field
                = f.text_field :specification, placeholder: "Specificaion"
        .row.justify-content-center.flex-column.flex-md-row.p-2.text-center
          .col-12.col-md-6
            .field
              = f.text_field :price_VAT_Inclusive, placeholder: "Price Vat Inclusive"
          .col-12.col-md-6
            .field
              = f.text_field :layer_per_sq, placeholder: "Number Per Sq"
          .col-12.col-md-10.p-2
            .field
              =f.text_field :uses, placeholder: "Uses"
          .col-12.col-md-10
            .field.p-2
              = f.label "Product Photo:"
              = f.file_field :avatar
        .actions.text-center
          = f.submit 'Save'
