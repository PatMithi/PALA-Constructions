= form_for @product do |f|
  - if @product.errors.any?
    #error_explanation
      %h2= "#{pluralize(@product.errors.count, "error")} prohibited this product from being saved:"
      %ul
        - @product.errors.full_messages.each do |message|
          %li= message

  .row.justify-content-center.flex-column-reverse.flex-md-row
    .col-12.col-md-12
      .field.w-100
        = f.text_field :description, placeholder: "Description"
  .row.justify-content-center.flex-column-reverse.flex-md-row
    .col-12.col-md-6
      .field
        = f.text_field :specification, placeholder: "Specificaion"
    .col-12.col-md-6
      .field
        = f.text_field :price_VAT_Inclusive, placeholder: "Price Vat Inclusive"
    .col-12.col-md-10
      .field.p-2
        = f.label "Product Photo:"
        = f.file_field :avatar
  .actions
    = f.submit 'Save'
